{
  "name": "StatusStrap",
  "version": "1.0.13",
  "description": "StatusStrap App",
  "author": "Smilez",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Orbit-Softworks/statusstrap-windows-application.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "publish": "electron-builder --win -p always"
  },
  "devDependencies": {
    "electron": "^26.6.10",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "electron-log": "^5.0.1"
  },
  "build": {
    "appId": "com.statusstrap.app",
    "productName": "StatusStrap",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "Orbit-Softworks",
      "repo": "statusstrap-windows-application"
    }
  }
}
