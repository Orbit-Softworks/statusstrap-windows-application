{
  "name": "StatusStrap",
  "version": "1.0.17",
  "description": "StatusStrap App",
  "author": "Smilez",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Orbit-Softworks/statusstrap-windows-application.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --linux --win",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "publish": "electron-builder --mac --linux --win -p always"
  },
  "devDependencies": {
    "electron": "^26.6.10",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "electron-log": "^5.0.1"
  },
  "build": {
    "appId": "com.statusstrap.app",
    "productName": "StatusStrap",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.utilities",
      "icon": "icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "category": "Utility",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "Orbit-Softworks",
      "repo": "statusstrap-windows-application"
    }
  }
}
