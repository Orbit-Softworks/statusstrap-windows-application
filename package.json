{
  "name": "StatusStrap",
  "version": "1.0.25",
  "description": "StatusStrap App",
  "author": {
    "name": "Smilez",
    "email": "smilezreal@yahoo.com"
  },
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Orbit-Softworks/statusstrap-windows-application.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --linux --win",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "publish": "electron-builder --mac --linux --win -p always"
  },
  "devDependencies": {
    "electron": "^26.6.10",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "electron-log": "^5.0.1"
  },
  "build": {
    "appId": "com.statusstrap.app",
    "productName": "StatusStrap",
    "files": [
      "**/*",
      "!**/*.md"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "category": "public.app-category.utilities",
      "icon": "icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Utility",
      "icon": "icon.png",
      "maintainer": "Smilez <smilezreal@yahoo.com>"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "Orbit-Softworks",
      "repo": "statusstrap-windows-application"
    }
  }
}
